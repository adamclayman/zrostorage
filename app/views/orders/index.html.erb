<div class="row">
	<% @orders.each do |order| %>
		<div class="col-sm-2 col-md-4">
			<h3>Order # <%= order.id %>:
				<%= link_to order.product.name, order.product %>
				
			</h3>
			<p><%= order.product.description %></p>
			<strong>$ <%= order.product.price %></strong><br>
			<tbody>
				<tr>
				    <td><%= link_to 'Show', order %></td>
				</tr>
        	</tbody>
		</div><!-- /col -->
	<% end %>
</div>