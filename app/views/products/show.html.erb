<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag(@product.image_url, alt: @product.description) %>
      <div class="caption">
        <h4><%= @product.name %></h4>
        <p>
          <%= @product.description %><br>
          <%= link_to 'Edit', edit_product_path(@product) %> |
          <%= link_to 'Back', products_path %>
        </p>
        <% if @product.comments.count != 0 %>
          <p>Avg. Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
        <% else %>
          <h5>Be the first to review!</h5>
          <% if signed_in? == false %>
            <h5>Just sign in first!</h5>
          <% end %>
        <% end %>
        <p>Price: <%= number_to_currency(@product.price, :unit => "$") %></p>
        <%= render 'new_comment' %>

      </div>
    </div>
  </div>
</div>

<%= render 'comments' %>
<%= will_paginate @comments %>

