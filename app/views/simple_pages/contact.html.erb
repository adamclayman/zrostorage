
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Contact</h1>
			<h3>We're here, and want to help!</h3>

			<%= flash[:notice] %>

			<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
				<div class="row">
					<div class="form-group">
						<%= form.label :name %>
						<%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
					</div>
					<div class="form-group">
						<%= form.label :email %>
						<%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
					</div>
					<div class="form-group">
						<%= form.label :message %>
						<%= form.text_field :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
					</div>
				</div>
				<%= form.submit "Send", class: "form_label" %>
			<% end %>
				
			<p>Write us at <a href="mailto:info@zrostorage.org">info@zrostorage.org</a>.</p>
		</div>
	</div>
</div>